1.1
        $i=1;
        while($i<=5) {
            $empty = 5 - $i;
            $circle = $i;
            for($m = 0; $m < $empty; $m++):
                echo "&nbsp;&nbsp;&nbsp;&nbsp;";
            endfor;
            for($n = 0; $n < $circle; $n++):
                echo "O&nbsp;";
            endfor;
            echo "<br>";
            $i++;
        }
 
 
 1.2
        $row=4;
        while($row>=0) {
            $blank = $row;
            if($row==4){
                $circle=1;
            }else{
                $circle += 2;
            }
            for($m = 0; $m < $blank; $m++):
                echo "&nbsp;&nbsp;&nbsp;&nbsp;";
            endfor;
            for($n = 0; $n < $circle; $n++):
                echo "O&nbsp;";
            endfor;


            echo "<br>";
            $row=$row-1;
        }
